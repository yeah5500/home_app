.recordItem {
    display: flex;
    justify-content: space-between;
    width: auto;
    margin: 20rpx 30rpx;
    padding: 30rpx;
    border-radius: 10rpx;
    background-color: #fff;
    box-shadow: 2rpx 2rpx 30rpx rgba(0,0,0,0.15);
}

.ntmBox {
    width: 70%;
}

.name {
    color: #333;
    line-height: 36rpx;
}

.duijiangma {
    color: #2a2a2a;
}

.btnBox {
    align-self: flex-end;
    margin-bottom: 6rpx;
}

.telBtn[plain] {
    font-size: 30rpx;
    line-height: 60rpx;
    background-color: #fff;
    color: #2a2a2a;
}

.telBtn::after {
    border: none;
}