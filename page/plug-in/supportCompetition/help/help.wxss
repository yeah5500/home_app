.page {
    min-height: 100vh;
    font-size: 32rpx;
    padding: 30rpx;
    margin-top: -1px;
    background: url(http://www.ixiaochengxu.cc/resource/images/plug-in/set-like/bottombg.jpg);
}

.mainBox {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 50rpx 30rpx;
}

.topBox {
    color: #ed4649;
    align-items: center;
}

.myPicBox {
    width: 140rpx;
    height: 140rpx;
    border: 4rpx solid #fea366;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.myPic {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.name {
    font-size: 30rpx;
}

.num {
    font-weight: 700;
}

.nickname {
    color: #fe7114;
    margin-top: 10rpx;
}

.inventBox {
    color: #fe7114;
    font-weight: 700;
    font-size: 30rpx;
    margin-top: 72rpx;
}

.friName {
    display: inline-block;
    max-width: 200rpx;
    vertical-align: bottom;
}

.btn {
    width: 332rpx;
    height: 74rpx;
    line-height: 74rpx;
    color: #fff;
    font-size: 30rpx;
}

.btn::after {
    border: 0;
}

.btn:active {
    opacity: 0.85;
}

button[disabled]:not([type]) {
    color: #fff;
    background-color: #ff7d27;
}

.helpBtn {
    background-color: #ff7d27;
    margin-top: 40rpx;
}

.partBtn {
    background-color: #ed4649;
    margin-top: 40rpx;
}

.aleady {
    background: #999;
    margin-top: 40rpx;
}

.overtips {
    color: #f00;
    text-align: center;
    padding: 40rpx;
}

.helpFri {
    margin-top: 110rpx;
}

.cir {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    display: inline-block;
}

.kxcircle {
    border: 2rpx solid #fda751;
}

.sxcircle {
    background-color: #fda751;
}

.aliLf {
    text-align: right;
}

.moveLf {
    margin-left: -6rpx;
}

.aliRg {
    text-align: left;
}

.moveRg {
    margin-right: -6rpx;
}

.helpTit {
    color: #fe7114;
    margin-left: 50rpx;
    margin-right: 50rpx;
    font-weight: 700;
}

.scrollView {
    margin-top: 50rpx;
    text-align: left;
    max-height: 330rpx;
}

.hfPic {
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 0 22rpx 30rpx 24rpx;
}

.shade_bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0,0.5);
}

.modal {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    width: 100%;
    height: 750rpx;
    background: url(http://www.ixiaochengxu.cc/resource/images/plug-in/set-like/modalBg.png);
    background-size: contain;
    animation: fadeIn 700ms linear forwards;
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.succBgPic {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.moaCon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.qiangPic {
    position: relative;
    z-index: 10;
    width: 158rpx;
    height: 158rpx;
    border: 2rpx solid #fff;
    border-radius: 50%;
}

.rqplus {
    position: relative;
    z-index: 20;
    color: #ed4649;
    line-height: 66rpx;
    background-color: #fff;
    padding: 0 40rpx;
    margin-top: -20rpx;
    border-radius: 6rpx;
    font-size: 30rpx;
}