page {
    font-size: 32rpx;
}

.blue {
    color: #00aef3;
}

page .wx-radio-input {
    margin-right: 0;
    margin-left: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.cancel-tit {
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    color: #888;
}

.cancel-item {
    display: flex;
    padding: 20rpx 30rpx;
    background: #fff;
    justify-content: space-between;
}

.cancel-dec {
    background: #fff;
    padding: 20rpx;
    margin-top: 20rpx;
    line-height: 1.3;
}

.cancel-dec-inp {
    line-height: 1.5;
    height: 160rpx;
    word-break: break-all;
    word-wrap: break-word;
}

.cancel-sure {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    border-radius: 0;
}

.cancel-sure::after {
    border: none;
}

.cancel-desc {
    padding-top: 20rpx;
    color: red;
    font-size: 28rpx;
    text-align: center;
}

.cancel-desc-tips {
    color: #999;
    padding-top: 20rpx;
    font-size: 28rpx;
    text-align: center;
}